<% layout("/layouts/boilerplate") %>
<link rel="stylesheet" href="/css/new_listing.css">
<body>
    
    <div class="container">
        <h1>Create new Listing</h1>
    <form action="/listings" method="post" novalidate class="needs-validation ">
        <div class="row">
            <div class="col-sm-12">
                <label for="title" class="form-label">Title</label>
                <input type="text" id="title" class="form-control" name="ob[title]" placeholder="Enter Title" required>
                <div class="valid-feedback">Good title</div>
                <div class="invalid-feedback">Please enter relevent title</div>
            </div>
            <div class="col-sm-12">
                <label for="description" class="form-label">Description</label>
                <input type="text" id="description" class="form-control" name="ob[description]" placeholder="Enter Description" required>
            </div>
            <div class="col-sm-4">
                <label for="price" class="form-label">Price / night</label>
                <input type="text" id="price" class="form-control" name="ob[price]" pattern="[0-9]+" placeholder="Enter Price" required>
            </div>
            <div class="col-sm-8">
                <label for="country" class="form-label">Country</label>
                <input type="text" id="country" class="form-control" name="ob[country]" placeholder="Enter Country" required>
            </div>
            <div class="col-sm-12">
                <label for="location" class="form-label">Location</label>
                <input type="text" id="location" class="form-control" name="ob[location]" placeholder="Enter Location" required>
            </div>
            <div class="col-sm-12">
                <label for="image" class="form-label">image Url</label>
                <input type="text" id="image" class="form-control" name="ob[image]" placeholder="Enter img url" >
            </div>
        </div>

        


        <button class="btn btn-primary" style="background-color: rgb(0, 148, 197); border: none;">Submit</button>
    </form>
    </div>

   
</body>
